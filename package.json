{
  "name": "templarios",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:prettier": "prettier . --write --cache --cache-location .prettiercache",
    "lint:stylelint": "stylelint **/*.scss --fix --cache --formatter verbose",
    "lint": "npm-run-all lint:prettier --parallel lint:stylelint",
    "build:lerna": "lerna run tp:build",
    "move:core": "shx cp -r packages/core/dist packages/core/loader packages/core/icons packages/core/styles core",
    "clean:core": "shx rm -rf core/*",
    "move:angular": "shx cp -r packages/angular-lib/dist/templarios/* angular",
    "clean:angular": "shx rm -rf angular/*",
    "clean": "npm-run-all --parallel clean:core clean:angular",
    "move": "npm-run-all --parallel move:core move:angular",
    "start": "cd packages/core && npm run tp:start",
    "build": "npm-run-all lint build:lerna clean move"
  },
  "devDependencies": {
    "@types/node": "^20.8.2",
    "lerna": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "shx": "^0.3.4",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "typescript": "^5.2.2"
  }
}
